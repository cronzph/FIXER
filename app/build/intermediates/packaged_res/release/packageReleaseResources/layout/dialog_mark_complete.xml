<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/completionTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark as Complete"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/completionInstructionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please take a photo showing the completed repair/fix before marking this report as complete."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addCompletionPhotoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Completion Photo"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:icon="@drawable/ic_photo"
        app:iconGravity="textStart" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/completionImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:contentDescription="Completion photo" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/removeCompletionPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Photo"
        android:layout_gravity="center"
        android:visibility="gone"
        style="@style/Widget.Material3.Button.TextButton"
        app:icon="@drawable/ic_delete"
        app:iconGravity="textStart" />

</LinearLayout>