<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/campusCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with campus name and status indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/statusIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”´"
                android:textSize="24sp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/campusNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Main Campus"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/totalIssuesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 active issues"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/text_secondary" />

        </LinearLayout>

        <!-- Critical indicator -->
        <TextView
            android:id="@+id/criticalIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš ï¸ 2 critical"
            android:textSize="12sp"
            android:textColor="@color/priority_critical"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Status breakdown -->
        <TextView
            android:id="@+id/statusBreakdownText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending: 3 | In Progress: 1 | Scheduled: 1"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp" />

        <!-- Completed count -->
        <TextView
            android:id="@+id/completedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completed: 10"
            android:textSize="12sp"
            android:textColor="@color/status_completed"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


