<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/detailTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Photo (if exists) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/photoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/detailPhotoImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Report Photo" />

        </androidx.cardview.widget.CardView>

        <!-- Status and Priority Chips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/detailStatusChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/detailPriorityChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium" />

        </LinearLayout>

        <!-- Description Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/detailDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report description goes here"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <!-- Location Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/detailLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Building A, Room 101"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <!-- Campus Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/detailCampusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Campus"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <!-- Department Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/detailDepartmentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engineering"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="16dp" />

        <!-- Schedule Section (if scheduled) -->
        <LinearLayout
            android:id="@+id/scheduleSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule Information"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailScheduleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-01-15 at 10:00 AM"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assigned to: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailAssignedToText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/technicianContactSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/detailTechnicianEmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: technician@email.com"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/detailTechnicianPhoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone: +1234567890"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/detailSchedulingNotesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes: Check electrical panel first"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="16dp" />

        </LinearLayout>

        <!-- Report Metadata -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Information"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reported by: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailReportedByText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jane Smith"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 10, 2024"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report ID: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailReportIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RPT-2024-001"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="monospace"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>