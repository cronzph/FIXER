<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/card_background"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_person_add"
                    app:tint="@color/primary_red" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Request Access to F.I.X.E.R"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Fill out the form below to request access to the F.I.X.E.R system. Your request will be reviewed by an administrator."
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Main Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/card_background"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Personal Information Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Personal Information"
                    android:textColor="@color/primary_red"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Full Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fullNameInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Full Name"
                    app:boxStrokeColor="@color/primary_red"
                    app:hintTextColor="@color/primary_red"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/primary_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fullNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Email Address"
                    app:boxStrokeColor="@color/primary_red"
                    app:hintTextColor="@color/primary_red"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/primary_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:paddingStart="40dp"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phoneInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:hint="Phone Number"
                    app:boxStrokeColor="@color/primary_red"
                    app:hintTextColor="@color/primary_red"
                    app:startIconDrawable="@drawable/ic_phone"
                    app:startIconTint="@color/primary_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:inputType="phone"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Account Security Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Account Security"
                    android:textColor="@color/primary_red"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Password"
                    app:boxStrokeColor="@color/primary_red"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/primary_red"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/primary_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:inputType="textPassword"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirmPasswordInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:hint="Confirm Password"
                    app:boxStrokeColor="@color/primary_red"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/primary_red"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/primary_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/confirmPasswordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:inputType="textPassword"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Work Information Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Work Information"
                    android:textColor="@color/primary_red"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Role Spinner -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/roleInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Role"
                    app:boxStrokeColor="@color/primary_red"
                    app:hintTextColor="@color/primary_red"
                    app:startIconDrawable="@drawable/ic_work"
                    app:startIconTint="@color/primary_red">

                    <AutoCompleteTextView
                        android:id="@+id/roleDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:inputType="none"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Department (Hidden for Technicians) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/departmentInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Department"
                    app:boxStrokeColor="@color/primary_red"
                    app:hintTextColor="@color/primary_red"
                    app:startIconDrawable="@drawable/ic_business"
                    app:startIconTint="@color/primary_red">

                    <AutoCompleteTextView
                        android:id="@+id/departmentDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:inputType="none"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campus -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/campusInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Campus"
                    app:boxStrokeColor="@color/primary_red"
                    app:hintTextColor="@color/primary_red"
                    app:startIconDrawable="@drawable/ic_location_on"
                    app:startIconTint="@color/primary_red">

                    <AutoCompleteTextView
                        android:id="@+id/campusDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:inputType="none"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campus Loading Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:id="@+id/campusLoadingLayout">

                    <ProgressBar
                        android:id="@+id/campusProgressBar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:indeterminateTint="@color/primary_red" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Loading campuses..."
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Terms and Conditions Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="Terms and Conditions"
                    android:textColor="@color/primary_red"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Terms Checkbox -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/card_stroke"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/termsCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="I agree to the Terms and Conditions"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:buttonTint="@color/primary_red" />

                        <TextView
                            android:id="@+id/viewTermsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="4dp"
                            android:text="View Terms and Conditions"
                            android:textColor="@color/primary_red"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:padding="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Error message for terms -->
                <TextView
                    android:id="@+id/termsErrorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#B00020"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/card_background"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Submit Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:indeterminateTint="@color/primary_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submitting request..."
                        android:textColor="@color/primary_red"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cancelButton"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="Cancel"
                        android:textColor="@color/primary_red"
                        app:cornerRadius="28dp"
                        app:icon="@drawable/ic_close"
                        app:iconTint="@color/primary_red"
                        app:strokeColor="@color/primary_red" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/submitButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/button_background_selector"
                        android:text="Submit"
                        android:enabled="false"
                        android:textColor="@android:color/white"
                        app:cornerRadius="28dp"
                        app:icon="@drawable/ic_send"
                        app:iconTint="@android:color/white" />

                </LinearLayout>

                <!-- Info Note -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#FFF9C4"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_info"
                            app:tint="@color/primary_red" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="A verification email will be sent to your email address after submitting. Your request will be reviewed by an administrator."
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>