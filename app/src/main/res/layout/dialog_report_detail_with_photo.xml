<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@android:color/darker_gray"
        android:showDividers="middle">

        <!-- Title -->
        <TextView
            android:id="@+id/detailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report description goes here..."
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="12dp" />

        <!-- Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                android:tint="#666666"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/detailLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Building A, Room 201"
                android:textSize="13sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_calendar"
                android:tint="#666666"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/detailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug 23, 2025 10:00 AM"
                android:textSize="13sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Reported By -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person"
                android:tint="#666666"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/detailReportedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reported by: John Doe"
                android:textSize="13sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Status Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/detailStatusChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDING"
            android:textSize="10sp"
            android:textStyle="bold"
            app:chipMinHeight="24dp"
            app:chipBackgroundColor="#FF9800"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Photo Preview -->
        <ImageView
            android:id="@+id/detailPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:background="@drawable/ic_photo" />

    </LinearLayout>
</ScrollView>
