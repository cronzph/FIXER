<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashActivity">

    <!-- Centered Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="F.I.X.E.R Logo"
            android:scaleType="centerCrop"
            android:padding="20dp"
            android:elevation="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F.I.X.E.R"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primary_red"
            android:letterSpacing="0.15"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facility Inspection &amp; Xpress Equipment Repair"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:alpha="0.9"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/roboto_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Management Portal"
            android:textSize="16sp"
            android:textColor="@color/accent_orange"
            android:textStyle="bold"
            android:alpha="0.95"
            android:fontFamily="@font/roboto_medium" />
    </LinearLayout>

    <!-- Footer anchored at bottom center -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© 2025 F.I.X.E.R Solutions"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:alpha="0.7"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
